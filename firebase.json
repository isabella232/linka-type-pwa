{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build",
    "source": "functions",
    "headers": [{
      "source": "*",
      "headers": [{
        "key": "Access-Control-Allow-Origin",
        "value": "*"
      }]
    }]
  },

  "hosting": {
    "predeploy": ["rm -rf dist", "npm run build"],
    "site": "linkatype",
    "public": "dist",
    "headers": [{
      "source": "*",
      "headers": [{
        "key": "Access-Control-Allow-Origin",
        "value": "*"
      }]
    }]
  }
}